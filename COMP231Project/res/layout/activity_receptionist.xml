<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receptionist" >
    
    <TableRow
            android:id="@+id/trPatientSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingLeft="30sp">

    <Button
        android:id="@+id/btnRegisterPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_receptionist_patient_registration"
        android:textColor="#FFFFFF"
        android:paddingTop="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:drawablePadding="-15sp"/>
    
        <Button
        android:id="@+id/btnSearchDoctorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_receptionist_search_doctor_information"
        android:textColor="#FFFFFF"
        android:paddingTop="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:drawablePadding="-15sp"/>
        </TableRow>
        
    <TableRow
        android:id="@+id/trDocSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp" >
       
        <Button
        android:id="@+id/btnSearchPatientInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_receptionist_search_patient_information"
        android:textColor="#FFFFFF"
        android:paddingTop="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:drawablePadding="-15sp"/>
        <Button
        android:id="@+id/btnAllPatients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_receptionist_all_patients"
        android:textColor="#FFFFFF"
        android:paddingTop="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:drawablePadding="-15sp"/>
     </TableRow>
     
        <TableRow
        android:id="@+id/trAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp" >
       
        <Button
        android:id="@+id/btnAllDoctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_receptionist_all_doctors"
        android:textColor="#FFFFFF"
        android:paddingTop="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:drawablePadding="-15sp"/>
        <Button
        android:id="@+id/btnScheduleAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_receptionist_schedule_patient_appointment"
        android:textColor="#FFFFFF"
        android:paddingTop="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:drawablePadding="-15sp"/>
        
        </TableRow>

</TableLayout>